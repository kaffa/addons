(function() {
    var sep = prompt("Input separator: ", "=");
    if (!sep) {
        return;
    }
    if (sep.search(/\s/igm) != -1) {
        alert("The separator shouldn't include space letters (regular expression \s).");
        return;
    }
    alignment(sep);
})();
